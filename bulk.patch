+"use client";
+
+import React from "react";
+
+type ReceiptExtraction = {
+  merchant: string | null;
+  taxId: string | null;
+  receiptNo: string | null;
+  dateISO: string | null; // YYYY-MM-DD
+  timeHHMM: string | null; // HH:MM
+  total: number | null;
+  currency: string | null;
+  vatTotal: number | null;
+  note: string | null;
+  rawText?: string | null;
+  confidence?: number | null;
+};
+
+type ItemState = {
+  id: string;
+  file: File;
+  previewUrl: string;
+  status: "queued" | "reading" | "done" | "error";
+  error?: string;
+  result?: ReceiptExtraction;
+};
+
+function uid() {
+  return Math.random().toString(16).slice(2) + Date.now().toString(16);
+}
+
+async function fileToDataUrl(file: File): Promise<string> {
+  return await new Promise((resolve, reject) => {
+    const r = new FileReader();
+    r.onerror = () => reject(new Error("Dosya okunamadı."));
+    r.onload = () => resolve(String(r.result));
+    r.readAsDataURL(file);
+  });
+}
+
+function Field(props: {
+  label: string;
+  value: any;
+  onChange: (v: string) => void;
+  disabled?: boolean;
+  inputMode?: React.HTMLAttributes<HTMLInputElement>["inputMode"];
+}) {
+  return (
+    <div>
+      <label className="mb-1 block text-xs text-slate-600">{props.label}</label>
+      <input
+        className="w-full rounded-xl border border-slate-200 p-2 text-sm disabled:bg-slate-50"
+        value={props.value ?? ""}
+        onChange={(e) => props.onChange(e.target.value)}
+        disabled={props.disabled}
+        inputMode={props.inputMode}
+      />
+    </div>
+  );
+}
+
+export default function BulkReceiptUploader() {
+  const [items, setItems] = React.useState<ItemState[]>([]);
+  const [running, setRunning] = React.useState(false);
+
+  const queuedCount = items.filter((i) => i.status === "queued").length;
+  const doneCount = items.filter((i) => i.status === "done").length;
+  const errorCount = items.filter((i) => i.status === "error").length;
+
+  const onPickFiles = (files: FileList | null) => {
+    if (!files || files.length === 0) return;
+    const list = Array.from(files);
+    const next: ItemState[] = list.map((file) => ({
+      id: uid(),
+      file,
+      previewUrl: URL.createObjectURL(file),
+      status: "queued",
+    }));
+    setItems((prev) => [...prev, ...next]);
+  };
+
+  const updateItem = (id: string, patch: Partial<ItemState>) => {
+    setItems((prev) => prev.map((it) => (it.id === id ? { ...it, ...patch } : it)));
+  };
+
+  const startReading = async () => {
+    if (running) return;
+    setRunning(true);
+
+    try {
+      for (const it of items) {
+        if (it.status !== "queued") continue;
+        updateItem(it.id, { status: "reading", error: undefined });
+
+        try {
+          const imageDataUrl = await fileToDataUrl(it.file);
+          const res = await fetch("/api/receipt/vision", {
+            method: "POST",
+            headers: { "Content-Type": "application/json" },
+            body: JSON.stringify({ imageDataUrl }),
+          });
+
+          if (!res.ok) {
+            const txt = await res.text().catch(() => "");
+            throw new Error(`API hata: ${res.status} ${txt}`.trim());
+          }
+
+          const json = (await res.json()) as ReceiptExtraction;
+          updateItem(it.id, { status: "done", result: json });
+        } catch (e: any) {
+          updateItem(it.id, { status: "error", error: e?.message || "Okuma hatası" });
+        }
+      }
+    } finally {
+      setRunning(false);
+    }
+  };
+
+  const clearAll = () => {
+    items.forEach((i) => URL.revokeObjectURL(i.previewUrl));
+    setItems([]);
+  };
+
+  const removeOne = (id: string) => {
+    const it = items.find((x) => x.id === id);
+    if (it) URL.revokeObjectURL(it.previewUrl);
+    setItems((prev) => prev.filter((x) => x.id !== id));
+  };
+
+  const editField = (id: string, key: keyof ReceiptExtraction, value: any) => {
+    setItems((prev) =>
+      prev.map((it) => {
+        if (it.id !== id) return it;
+        return {
+          ...it,
+          result: {
+            ...(it.result || ({} as ReceiptExtraction)),
+            [key]: value,
+          },
+        };
+      })
+    );
+  };
+
+  return (
+    <div className="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
+      <div className="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
+        <div className="flex items-center gap-3">
+          <input type="file" accept="image/*" multiple onChange={(e) => onPickFiles(e.target.files)} disabled={running} />
+
+          <button
+            className="rounded-xl border border-slate-200 px-3 py-2 text-sm hover:bg-slate-50 disabled:opacity-50"
+            onClick={startReading}
+            disabled={running || queuedCount === 0}
+          >
+            {running ? "Okunuyor..." : "AI ile Oku"}
+          </button>
+
+          <button
+            className="rounded-xl border border-slate-200 px-3 py-2 text-sm hover:bg-slate-50 disabled:opacity-50"
+            onClick={clearAll}
+            disabled={running || items.length === 0}
+          >
+            Temizle
+          </button>
+        </div>
+
+        <div className="text-sm text-slate-600">
+          Toplam: <b>{items.length}</b> • Tamam: <b>{doneCount}</b> • Hata: <b>{errorCount}</b> • Kuyruk: <b>{queuedCount}</b>
+        </div>
+      </div>
+
+      <div className="mt-4 grid grid-cols-1 gap-3">
+        {items.map((it) => (
+          <div key={it.id} className="rounded-2xl border border-slate-200 p-3">
+            <div className="flex flex-col gap-3 md:flex-row">
+              <div className="w-full md:w-48">
+                <img src={it.previewUrl} alt="receipt" className="h-48 w-full rounded-xl object-cover" />
+                <div className="mt-2 flex items-center justify-between text-xs text-slate-600">
+                  <span>
+                    Durum:{" "}
+                    <b>
+                      {it.status === "queued" && "Kuyruk"}
+                      {it.status === "reading" && "Okunuyor"}
+                      {it.status === "done" && "Bitti"}
+                      {it.status === "error" && "Hata"}
+                    </b>
+                  </span>
+                  <button className="text-xs underline" onClick={() => removeOne(it.id)} disabled={running}>
+                    Kaldır
+                  </button>
+                </div>
+                {it.error ? <div className="mt-2 text-xs text-red-600">{it.error}</div> : null}
+              </div>
+
+              <div className="flex-1">
+                <div className="grid grid-cols-1 gap-2 sm:grid-cols-2">
+                  <Field label="Firma" value={it.result?.merchant ?? ""} onChange={(v) => editField(it.id, "merchant", v)} disabled={!it.result} />
+                  <Field label="VKN/TCKN" value={it.result?.taxId ?? ""} onChange={(v) => editField(it.id, "taxId", v)} disabled={!it.result} />
+                  <Field label="Fiş No" value={it.result?.receiptNo ?? ""} onChange={(v) => editField(it.id, "receiptNo", v)} disabled={!it.result} />
+                  <Field label="Tarih (YYYY-MM-DD)" value={it.result?.dateISO ?? ""} onChange={(v) => editField(it.id, "dateISO", v)} disabled={!it.result} />
+                  <Field label="Saat (HH:MM)" value={it.result?.timeHHMM ?? ""} onChange={(v) => editField(it.id, "timeHHMM", v)} disabled={!it.result} />
+                  <Field
+                    label="Toplam"
+                    value={it.result?.total ?? ""}
+                    onChange={(v) => editField(it.id, "total", v === "" ? null : Number(v))}
+                    disabled={!it.result}
+                    inputMode="decimal"
+                  />
+                  <Field label="Para Birimi" value={it.result?.currency ?? ""} onChange={(v) => editField(it.id, "currency", v)} disabled={!it.result} />
+                  <Field
+                    label="KDV Toplam"
+                    value={it.result?.vatTotal ?? ""}
+                    onChange={(v) => editField(it.id, "vatTotal", v === "" ? null : Number(v))}
+                    disabled={!it.result}
+                    inputMode="decimal"
+                  />
+                </div>
+
+                <div className="mt-2">
+                  <label className="mb-1 block text-xs text-slate-600">Not</label>
+                  <textarea
+                    className="w-full rounded-xl border border-slate-200 p-2 text-sm"
+                    value={it.result?.note ?? ""}
+                    onChange={(e) => editField(it.id, "note", e.target.value)}
+                    disabled={!it.result}
+                    rows={2}
+                  />
+                </div>
+
+                {it.result?.rawText ? (
+                  <details className="mt-2">
+                    <summary className="cursor-pointer text-xs text-slate-600">Raw Text</summary>
+                    <pre className="mt-2 max-h-48 overflow-auto rounded-xl bg-slate-50 p-2 text-xs">{it.result.rawText}</pre>
+                  </details>
+                ) : null}
+              </div>
+            </div>
+          </div>
+        ))}
+
+        {items.length === 0 ? (
+          <div className="rounded-2xl border border-dashed border-slate-200 p-6 text-center text-sm text-slate-600">
+            Fiş görsellerini seç (çoklu seçim açık).
+          </div>
+        ) : null}
+      </div>
+    </div>
+  );
+}
